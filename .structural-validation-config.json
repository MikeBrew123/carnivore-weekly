{
  "validator_version": "2.0",
  "rules": {
    "critical": [1, 2, 3, 4, 5, 8, 14],
    "major": [6, 7, 9, 10, 12],
    "minor": [11, 13, 15]
  },
  "required_pages": [
    "public/index.html",
    "public/blog.html",
    "public/archive.html",
    "public/channels.html",
    "templates/blog_post_template.html",
    "templates/archive_template.html",
    "templates/index_template.html"
  ],
  "css_classes": {
    "logo": [
      "position",
      "top",
      "right",
      "width",
      "height",
      "object-fit",
      "object-position",
      "opacity",
      "filter"
    ],
    "nav-menu": [
      "display",
      "gap",
      "list-style",
      "padding",
      "margin"
    ],
    "container": [
      "max-width",
      "margin",
      "padding",
      "width"
    ],
    "header": [
      "background",
      "color",
      "padding",
      "margin",
      "box-shadow",
      "border",
      "position",
      "overflow"
    ],
    "section": [
      "background",
      "padding",
      "margin",
      "border-radius",
      "box-shadow",
      "border"
    ],
    "post-container": [
      "max-width",
      "margin",
      "padding"
    ],
    "post-header": [
      "margin",
      "padding",
      "border"
    ],
    "post-title": [
      "font-size",
      "color",
      "margin",
      "line-height",
      "font-family",
      "font-weight"
    ],
    "post-meta": [
      "display",
      "gap",
      "color",
      "font-size",
      "margin"
    ],
    "post-content": [
      "font-size",
      "line-height",
      "color",
      "margin"
    ]
  },
  "error_templates": {
    "duplicate_header": "Found {count} header elements, expected exactly 1",
    "missing_nav": "Navigation element not found or has incorrect class",
    "logo_depth_mismatch": "Logo path has incorrect depth: {path}",
    "inline_style_conflict": "Inline styles conflict with class '{class}'",
    "missing_heading": "No heading tags found on page",
    "missing_alt": "Image missing alt text: {src}",
    "missing_meta": "Missing meta tag: {meta_type}",
    "missing_title": "No title tag found",
    "broken_link": "Link missing href attribute",
    "missing_label": "Form input missing associated label",
    "bad_list_structure": "List contains non-li child element",
    "missing_main": "No main element found",
    "doctype_missing": "Missing DOCTYPE declaration",
    "lang_missing": "Missing lang attribute on html element",
    "performance_issue": "Performance compliance issue detected"
  },
  "validation_modes": {
    "template": {
      "description": "Validate template files (may have template variables)",
      "skip_rules": []
    },
    "generated": {
      "description": "Validate fully generated HTML files (strict validation)",
      "skip_rules": []
    }
  },
  "file_patterns": {
    "include": [
      "**/*.html"
    ],
    "exclude": [
      "node_modules/**",
      ".git/**",
      "screenshots/**"
    ]
  },
  "template_exceptions": {
    "newsletter_template.html": "Partial template - no header/nav needed",
    "blog_index_template.html": "May be partial template"
  },
  "rules_by_file": {
    "newsletter": {
      "skip_rules": [1, 2],
      "reason": "Newsletter templates are partials without header/nav structure"
    }
  }
}
