[flake8]
max-line-length = 100
ignore = E501, W503, E203, F541
# E501: Line too long (handled by black)
# W503: Line break before binary operator
# E203: Whitespace before ':' (conflicts with black)
# F541: f-string without placeholders (style preference)
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .eggs
